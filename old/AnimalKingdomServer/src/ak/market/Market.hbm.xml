<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ak.market">
    <class name="Market" table="market">
    	<!-- 联合主键 -->
        <composite-id>
        	<key-property name="playerId" type="int" column="player_id"/>
        	<key-property name="pos" type="int" column="pos"/>
        </composite-id>    
        <property name="status" type="int"/>        
        <property name="itemId" type="int" column="item_id"/>        
        <property name="itemNum" type="int" column="item_num"/>  
        <property name="price" type="int"/>    
        <property name="addTime" type="int" column="add_time"/> 
        <property name="expireTime" type="int" column="expire_time"/>        
        <property name="recycleTime" type="int" column="recycle_time"/> 
		<property name="buyPlayerId" type="int" column="buy_player_id"/> 
		<property name="buyPlayerName" type="string" column="buy_player_name"/>  
		<property name="buyPlayerIcon" type="string" column="buy_player_icon"/>        
		<property name="buyPlayerRich" type="int" column="buy_player_rich"/>
		<property name="sellPlayerName" type="string" column="sell_player_name"/>  
		<property name="sellPlayerIcon" type="string" column="sell_player_icon"/>        
		<property name="sellPlayerRich" type="int" column="sell_player_rich"/>
		<property name="sellPlayerLvl" type="int" column="sell_player_lvl"/>
		<property name="sellPlayerRaceId" type="int" column="sell_player_raceid"/>
    </class>
</hibernate-mapping>