<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ak.player">
	<class name="PlayerTransport" table="player_transport">
		<id name="id" column="id">
			  <generator class="native"/>
		</id>
		<property name="playerId" type="int" />
		<property name="friendId" type="int" />
		<property name="friendName" type="string" />
		<property name="icon" type="string" />
		<property name="transTime" type="date" column="transTime" /> 
		<property name="exist" type="boolean" />
	</class>

</hibernate-mapping>