<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ak.optLog">
    <class name="UserOptLog" table="user_opt_log">
        <id name="id" column="id">
            <generator class="native"/>
        </id>        
        <property name="playerId" type="int" column="player_id"/>
        <property name="type" type="int"/>        
        <property name="typeId" type="int" column="type_id"/>        
        <property name="status" type="int"/>        
        <property name="content" type="string"/>
        <property name="addTime" type="timestamp" column="add_time"/>
    </class>
</hibernate-mapping>